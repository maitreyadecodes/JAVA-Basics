import java.util.Scanner;

public class TrainTicketBookingSystem {
    static final int TOTAL_SEATS = 10;
    static boolean[] seats = new boolean[TOTAL_SEATS]; // false = available, true = booked
    static String[] passengerNames = new String[TOTAL_SEATS];
    static String[] trainList = {"Konkan Express", "Goa Sampark Kranti", "Mumbai Express",”Rajdhani express”,”august Kranti”,”garib rath”};

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        boolean running = true;

        while (running) {
            // Menu
            System.out.println("\n--- Train Ticket Booking System ---");
            System.out.println("1. Show Train List");
            System.out.println("2. Book Ticket");
            System.out.println("3. Cancel Ticket");
            System.out.println("4. Show Booking Status");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");
            int choice = scanner.nextInt();
            scanner.nextLine(); // consume newline

            // Using if-else-if ladder
            if (choice == 1) {
                System.out.println("Available Trains:");
                for (int i = 0; i < trainList.length; i++) {
                    System.out.println((i + 1) + ". " + trainList[i]);
                }

            } else if (choice == 2) {
                System.out.print("Enter passenger name: ");
                String name = scanner.nextLine();
                System.out.print("Enter train name: ");
                String trainname = scanner.nextLine();
                boolean booked = false;
                for (int i = 0; i < TOTAL_SEATS; i++) {
                    if (!seats[i]) {
                        seats[i] = true;
                        passengerNames[i] = name;
                        System.out.println("Ticket booked successfully for " + name + ". Seat Number: " + (i + 1+)+trainname);
                        booked = true;
                        break;
                    }
                }
                if (!booked) {
                    System.out.println("Sorry! No seats available.");
                }

            } else if (choice == 3) {
                System.out.print("Enter seat number to cancel (1 to " + TOTAL_SEATS + "): ");
                int seatNum = scanner.nextInt();
                if (seatNum >= 1 && seatNum <= TOTAL_SEATS && seats[seatNum - 1]) {
                    System.out.println("Ticket for " + passengerNames[seatNum - 1] + " is cancelled.");
                    seats[seatNum - 1] = false;
                    passengerNames[seatNum - 1] = null;
                } else {
                    System.out.println("Invalid seat number or seat is not booked.");
                }

            } else if (choice == 4) {
                System.out.println("Booking Status:");
                for (int i = 0; i < TOTAL_SEATS; i++) {
                    String status = seats[i] ? "Booked by " + passengerNames[i] : "Available";
                    System.out.println("Seat " + (i + 1) + ": " + status);
                }

            } else if (choice == 5) {
                System.out.println("Thank you for using the Train Ticket Booking System.");
                running = false;

            } else {
                System.out.println("Invalid choice. Please try again.");
            }
        }

        scanner.close();
    }
}
